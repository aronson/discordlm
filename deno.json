{
    "compilerOptions": {
        "lib": ["deno.ns", "deno.window"],
        "strict": true
    },
    "lint": {
        "include": ["src/"],
        "rules": {
            "tags": ["recommended"]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 120,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": ["src/"]
    },
    "lock": false,
    "nodeModulesDir": "auto",
    "test": {
        "include": ["src/"]
    },
    "tasks": {
        "start": "deno run --allow-net --allow-env --allow-read src/main.ts",
        "dev": "deno run --allow-net --allow-env --allow-read --watch src/main.ts",
        "prepare": "deno compile --allow-net --allow-env --allow-read --output dist/discordlm src/main.ts",
        "check": "deno check src/main.ts",
        "lint": "deno lint",
        "fmt": "deno fmt",
        "fmt:check": "deno fmt --check"
    },
    "imports": {},
    "exclude": [
        "dist/",
        "node_modules/"
    ]
}
